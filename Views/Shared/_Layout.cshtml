<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WeatherApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WeatherApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-primary text-white text-center py-4">
        <h1><a asp-controller="home" asp-action="index" class="text-white text-decoration-none">Weather Forecast</a></h1>
        <form method="post" asp-controller="home" asp-action="index">
            <div class="form-row">
                <div class="col-md-6 offset-md-3">
                    <input type="text" id="locationInput" name="location" class="form-control" placeholder="Enter city name">
                </div>
                <button type="submit" class="btn btn-primary mx-auto d-block">Send</button>
            </div>
        </form>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - WeatherApp
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
